  <script>
    document.querySelector("form").addEventListener("submit", function (e) {
      e.preventDefault();

      const hospitalName = document.querySelector("select").value;
      const password = document.querySelector("input[type='password']").value;

      fetch("/login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ hospitalName, password })
      })
      .then(res => res.json())
      .then(data => {
      if (data.message === "Login successful") {
  alert("Login successful!");
  document.getElementById("hospitalForm").classList.add("hidden");
  document.getElementById("additionalOptions").classList.remove("hidden");
}
 else {
          alert("Login failed: " + data.message);
        }
      });
    });
  </script>
  <script src="go.js"></script>
